/* pages/ReTest/ReTest.wxss */
.Container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.Title{
  display: flex;
  width: 100%;
  align-items: center;
  justify-items: center;
  padding-bottom: 200rpx;
}
.TitleText{
  font-size: 50rpx;
  flex-grow: 1;
  text-align: center;
  padding-right: 100rpx;
}
.TitleReturn{
  width: 100rpx;
  height: 100rpx;
  padding-left: 10px;
}
.Question{
  font-size: 50rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 400rpx;
}
.QuestionAnswer{
  display: flex;
  flex-wrap:wrap;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}
.QuestionButton{
  background-color: #2783f2;
  color: white;
  width: 300rpx;
  text-align: center;
  margin: 10rpx;
}
.QuestionTip{
  width: 600rpx;
  font-size: 25rpx;
}