/* pages/History/History.wxss */
.Container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.Title{
  display: flex;
  width: 100%;
  align-items: center;
  justify-items: center;
  padding-bottom: 20rpx;
}
.TitleText{
  font-size: 50rpx;
  flex-grow: 1;
  text-align: center;
  padding-right: 100rpx;
}
.TitleReturn{
  width: 100rpx;
  height: 100rpx;
  padding-left: 10px;
}
.Block{
  font-size: 25rpx;
  width: 100%;
  padding-left: 100rpx;
  padding-right: 100rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid black;
}
.BlockUnit{
  padding: 0 50rpx;
}