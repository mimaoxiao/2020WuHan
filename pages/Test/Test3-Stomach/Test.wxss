/* pages/Test/Test3/Test3.wxss */
.Container{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.TopBar{
  width: 100%;
  height: 60rpx;
  text-align: center;
  font-size: 25rpx;
  padding-top: 30rpx;
  background-color: #f4f4f4;
}
.Check{
  margin-top: 30rpx;
  margin-left: 550rpx;
  font-size: 25rpx;
}
.CheckIcon{
  width: 25rpx;
  height: 25rpx;
  padding-right: 10rpx;
}
.Number{
  display: flex;
  font-size: 30rpx;
  align-self:flex-start;
  width: 100%;
}
.NumberShow{
  width:60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  background-color: #2783f2;
  color: white;
  box-shadow: 0px 0px 5px black;
}
.Question{
  flex-grow: 1;
  width: 100%;
}
.QuestionPart{
  background-color: #f4f4f4;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.QuestionContent{
  justify-self: flex-start;
  font-size: 40rpx;
  flex-grow: 1;
}
.QuestionChoose{
  justify-self: flex-end;
  width: 300rpx;
  display: flex;
  flex-direction: column;
  padding-right: 20rpx;
}
.QuestionSlider{
  margin-bottom: 0px;
  margin-left: 0px;
  margin-right: 20px;
}
.QuestionLabel{
  display: flex;
  justify-content:space-between;
  font-size: 20rpx;
  margin-right: 20px;
}
.Answer{
  height: 100rpx;
  width: 100%;
  display: flex;
  padding: 20rpx;
  background-color: #f4f4f4;
}
.AnswerPrev{
  margin:10rpx;
  border: 2px solid #f4f4f4;
  color: #CFCFCF;
  background-color: white;
  padding: 10rpx;
  text-align: center;
  border-radius: 0px;
}
.AnswerNext{
  margin:10rpx;
  padding: 10rpx;
  text-align: center;
  flex-grow: 1;
  color: white;
  background-color: #2783f2;
  border-radius: 0px;
}